<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="App.Theme.MordecaiFileEncrypt" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="App.Theme.MordecaiFileEncryptSplash" parent="Theme.SplashScreen">

        <!-- 指定App原来的主题，当SplashScreen结束时主题就能被复原，从而不影响APP的主题外观 -->
        <item name="postSplashScreenTheme">@style/App.Theme.MordecaiFileEncrypt</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>
</resources>